<div class="flex flex-col w-80">
<h2 class="text-3xl mb-10">Fazer Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full border-none bg-neutral-200 rounded-xl py-3 px-4'%>
  </div>

  <div class="field mb-4">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full border-none bg-neutral-200 rounded-xl py-3 px-4"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions mb-5">
    <%= f.submit "Entrar", class: 'font-medium w-full text-white py-3 px-4 rounded-xl text-center bg-green-600 cursor-pointer'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>